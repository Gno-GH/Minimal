            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/yellow"
                android:id="@+id/tv_class_oe_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单/双"/>

            <TextView
                android:textColor="@color/yellow"
                android:id="@+id/tv_class_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数"/>
        </LinearLayout>

        <TextView
            android:textColor="@color/yellow"
            android:id="@+id/tv_class_start_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上课时间"
            android:textAlignment="center"/>

        <TextView
            android:textColor="@color/yellow"
            android:id="@+id/tv_class_end_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下课时间"
            android:textAlignment="center"/>

        <TextView
            android:textColor="@color/yellow"
            android:id="@+id/tv_class_teacher_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任课老师"
            android:textAlignment="center"/>
